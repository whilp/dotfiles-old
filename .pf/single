# This configuration should be suitable for a single host.

# Macros.
ext_if = "ext0"
int_if = "int0"

tcp_out = "{ bootps, msa, ntp, ssh, www, cddb }"
udp_out = "{ domain, ntp }"

tcp_in = "{ ssh }"

icmp_types = "{ echoreq }"

# Options.
set block-policy return
set loginterface $ext_if
set skip on lo

# Normalization.
scrub in

# Filter rules.
block log all

pass in inet proto icmp all icmp-type $icmp_types keep state
pass out inet proto icmp

antispoof quick for $ext_if

# Ingress traffic.
pass in on $ext_if inet proto tcp to any port $tcp_in flags S/SA keep state

# Egress traffic.
pass out on $ext_if inet proto tcp to any port $tcp_out flags S/SA keep state
pass out on $ext_if inet proto udp to any port $udp_out keep state

#vim: set nospell ft=pf:
