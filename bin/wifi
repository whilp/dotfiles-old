#!/bin/sh

SUDO=/usr/bin/sudo
WLAN=wlan
IFCONFIG="${SUDO} /sbin/ifconfig"
INTERFACE=$(${IFCONFIG} ${WLAN} 2>/dev/null | (IFS=:; read INT REST; echo $INT))

[ -z "${INTERFACE}" ] && (echo "===> No ${WLAN} interface found"; exit 1)
IFCONFIG="${IFCONFIG} ${INTERFACE}"
DHCLIENT="${SUDO} /sbin/dhclient ${INTERFACE}"

ifclear () {
    ${IFCONFIG} -nwid -nwkey -wpa -wpakey -chan -bssid media autoselect
}

plain () {
    ifclear
    ${IFCONFIG} $*
}

wep () {
    ifclear
    typeset NWID="$1"
    typeset PASSWORD="$2"
    shift 2
    ${IFCONFIG} nwid "${NWID}" nwkey "${PASSWORD}" $*
}

wpa () {
    ifclear
    typeset NWID="$1"
    typeset PASSWORD="$2"
    shift 2
    ${IFCONFIG} wpa nwid "${NWID}" wpakey "${PASSWORD}" $*
}

set -e
case $1 in
    al*) # alterra
        plain nwid alterra
        ${DHCLIENT}
        curl -daccept="I have read and agree to the above." http://192.168.1.1:8000/
        ;;
    ap) # ap
        wap apnet3.0 1409badgers
        ${DHCLIENT};;
    ay*) # aytan's
        wpa 3humans2cats1dog 'TheSma11estCh0w!' chan 6 bssid 68:7f:74:8a:b2:a1
        ${DHCLIENT};;
    b*) # bradbury's
        plain nwid bradbury\'s chan 6 bssid 00:1c:10:a0:43:bd
        ${DHCLIENT};;
    down|off)
        plain down;;
    f*) # fnal
        plain nwid fgz
        ${DHCLIENT};;
    jph) # johnson public house
        wpa "In the Company of Thieves Cafe" kickapoo chan 11 bssid 90:27:e4:5d:9b:09
        ${DHCLIENT};;
    ma*) # manna
        wep Manna mannanet
        ${DHCLIENT};;
    mi*) # mike
        wpa linksys_SES_42378 m2guwzabgw78f04x
        ${DHCLIENT};;
    mo*) # mom
        plain nwid linksys chan 6 bssid 00:14:bf:79:a4:ec
        ${DHCLIENT};;
    p*) # pop
        wpa home NTK6m4w7my
        ${DHCLIENT};;
    ra*) # radical_edward
        plain nwid radical_edward chan 6 bssid 00:0f:66:8e:ba:3f
        ${DHCLIENT};;
    sc*) # scan
        plain scan;;
    sl*) # slater
        wpa 'slater' presario
        ${DHCLIENT};;
    th*) # three lakes
        wpa CastleMagner llennoco46
        ${DHCLIENT};;
    tre*)
        wpa Windigo 99xBetterkarma chan 11 bssid 00:0f:b3:15:ef:c3
        ${DHCLIENT};;
    tru*) # truly spoken cycles
        wep 2WIRE765 4648578387 chan 6 bssid 00:21:7c:d2:d6:81
        ${DHCLIENT};;
    *) # whatever
        plain $*
        ${DHCLIENT};;
esac
set +e
