#!/bin/sh

PATH="${HOME}/bin:${PATH}"
TMUX="tmux -S ${HOME}/.tmux.sock"

do_attach () {
    SESSION=$1
    TMUX_CONFIG=$2
    ${TMUX} has-session -t "${SESSION}" > /dev/null 2>&1
    if [ $? -ne 0 ]; then
        ${TMUX} new-session -ds "${SESSION}"
        if [ -n "${TMUX_CONFIG}" -a -r "${TMUX_CONFIG}" ]; then
            ${TMUX} source-file ${TMUX_CONFIG}
        fi
    fi
    ${TMUX} attach-session -dt "${SESSION}"
}
do_meta () {
    case $(hostname) in
        lass.*) attach meta /home/will/.meta.conf;;
        *) ssh -t meta.lfod.us '~/bin/meta';;
    esac
}
do_mobi () {
    attach mobi /home/will/.mobi.conf
}
do_master () {
    attach master /home/will/.master.conf
}

case "$(basename $0)" in
    attach) do_attach $*;;
    master) do_master $*;;
    meta) do_meta $*;;
    mobi) do_mobi $*;;
esac
