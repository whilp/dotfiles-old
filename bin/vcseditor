#!/bin/sh

_vi () {
    ${EDITOR} "$1"
    return $?
}

_vim () {
    ${EDITOR} \
        "+startinsert" \
        "+e diff" \
        "+set buftype=help filetype=diff" \
        "+split $1" \
        "+resize 5" || return $?
    [ -s $1 ] || return 1

    return $?
}

msg=$(readlink -f "$1")
tmp=$(umask 077 && mktemp -td .vcseditor-XXXXXXXX)
pwd="$PWD"
trap "rm -rf $tmp" 0 1 2 3 6 15

_hgeditor () {
    sed -re '1,/^HG: --/d' < "$msg" >> msg
    sed -nre "s/^HG: changed //p" < "$msg" > paths

    (cd "$pwd"; xargs hg diff --stat) < paths > stat
    (cd "$pwd"; xargs hg diff) < paths > diffs

    (cat stat; echo; cat diffs) > diff
}

_giteditor () {
    sed -re '1,3d; 5,7d; $d' < "$msg" >> msg
    sed -nre "s/^.*modified: *//p" < "$msg" > paths

    (cd "$pwd"; xargs git diff --stat HEAD^) < paths > stat
    (cd "$pwd"; xargs git diff HEAD^) < paths > diffs

    (cat stat; echo; cat diffs) > diff
    cat diff
}

(
cd "$tmp"

echo "" > msg
echo "" > diff

case "$0" in
    *hgeditor) _hgeditor $*;;
    *giteditor) _giteditor $*;;
esac

fn=_$(basename ${EDITOR})

$fn msg
mv msg "$msg"
)

exit $?
