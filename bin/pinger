#!/bin/sh

PING=/sbin/ping
COUNT=1
INTERVAL=20
WAIT=1

pinger () {
    NOW=$(date '+%Y.%m.%dT%H:%M:%S')

    while [[ -n "$*" ]]; do
        STATE=${1##*!}
        TARGET=${1%%!*}
        shift
        OLDSTATE=

        [[ "${STATE}" != "${TARGET}" ]] && OLDSTATE="${STATE}"
        ${PING} "${TARGET}" >/dev/null 2>&1 && \
            STATE="UP" ||
            STATE="DOWN"
        [[ "${STATE}" != "${OLDSTATE}" ]] && \

        echo "${NOW} ${TARGET} -> ${STATE}"
        set -- $* ${TARGET}!${STATE}
        sleep "${INTERVAL}"
    done
}

usage () {
    echo "Usage: $0 [-c COUNT] [-w WAIT] [-i INTERVAL] HOST [HOST ...]"
}

while getopts c:hi:w: ARG; do
    case "${ARG}" in
        c) COUNT=${OPTARG};;
        h) usage; exit 0;;
        i) INTERVAL=${OPTARG};;
        w) WAIT=${OPTARG};;
        *) usage; exit 1;;
    esac
done
shift $(($OPTIND - 1))

PING="${PING} -c ${COUNT} -w ${WAIT}"

pinger $*
