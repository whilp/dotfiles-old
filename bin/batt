#!/bin/sh

sysctln () {
    sysctl -n $* | sed -e 's/ .*$//'
}

calcl () {
    cat <<EOF | bc -l
    scale=2
    $*
EOF
}

set -- $(sysctln hw.sensors.acpibat0)
VOLTAGE=$1
CURRENT=$2
FULL=$3
WARN=$4
LOW=$5
REMAINING=$6
RAW=$7
RATE=$8

if [ "${RATE}" -eq 0 ]; then
    echo "full"
    exit 0
fi

# Calculate the minutes with scale=2 and then drop the digits.
MINUTES=$(calcl "60 * ((1000 * ${REMAINING})/(0.2 + ${RATE}))")
MINUTES=${MINUTES%.*}

OUT=""
typeset -Z2 HOURS=0
if [ "${MINUTES}" -gt 60 ]; then
    HOURS=$((${MINUTES} / 60))
    MINUTES=$((${MINUTES} % 60))
fi
typeset -Z2 MINUTES

if [ -n "${HOURS}" -o -n "${MINUTES}" ]; then
    echo "${HOURS}:${MINUTES}"
fi
