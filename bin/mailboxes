#!/bin/sh

find ~/.maildir -maxdepth 3 -type d -path '*/cur' \
    \! \( -path "*/attic/*" \
        -or -path "*/system/*" \
        -or -path "*/drafts/*" \) | \
while read BOX; do
    BOX="${BOX##*.maildir/}"
    BOX="${BOX%/cur}"
    case "${BOX}" in
        inbox|friend|family) continue;;
        osg/goc) continue;;
        hep/*)
            case "${BOX#hep/}" in
                inbox|req|nagios|root|monitor|savannah) continue;;
            esac
            echo -n " =${BOX}"
        ;;
        *) echo -n " =${BOX}";;
    esac
done
echo
