set -x
CALLBACK=
case ${UNAME} in
    OpenBSD)
        CALLBACK=$(fstat -p $(ps -o ppid -p $$ | tail -1) | sed -nre 's/.* internet stream tcp.*127.0.0.1://p')
        ;;
esac
if [ -n "${CALLBACK}" -a -n "${SSH_CLIENT_NAME}" ]; then
    mkdir -p ~/.ssh/callbacks
    echo "${CALLBACK}" >| ".ssh/callbacks/${SSH_CLIENT_NAME}"
fi
set +x
