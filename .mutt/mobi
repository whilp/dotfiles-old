source "~/.muttrc"

set index_format="%[%H:%M] %-10.10F  %Z %s"
set pager_index_lines=0
ignore *
unignore from: date subject to cc reply-to:

unmailboxes *
mailboxes =inbox =friend =family \
    =hep/inbox =hep/req =hep/nagios =hep/root =hep/monitor =hep/savannah

bind pager <Right> next-new-then-unread
bind index <Right> next-new-then-unread
bind pager <Left> previous-new-then-unread
bind index <Left> previous-new-then-unread
bind pager x sync-mailbox
bind index x sync-mailbox
bind pager R read-thread
bind index R read-thread
