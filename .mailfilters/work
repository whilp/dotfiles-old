if ( /^List-Id:.*glow-tech\.cs\.wisc\.edu/ )
{
    if ( /^Subject: [glow-tech] GLOW Absent Report/ )
    {
        to "$HEP/Absent/"
    }
    to "$HEP/GLOW/"
}

if ( /^List-Owner:.*CMS.*@LISTSERV\.FNAL\.GOV/ )
{
    to "$HEP/CMS/"
}

if ( /^Subject: (UP|DOWN|RECOVERY|PROBLEM):/ )
{
    to "$HEP/Nagios/"
}


if ( /^(To|Cc):.*@physics\.wisc\.edu/ )
{
    to "$HEP/Department/"
}

if ( /^(From|To):.*(hep|cs)\.wisc\.edu/ )
{
    if ( /^Subject: UW-HEP Condor Absent Report/ )
    {
        to "$HEP/Absent/"
    }
    if ( /^From:.*help@nod\.hep\.wisc\.edu/ || \
        /^(From|To|Cc):req@ginseng\.hep\.wisc\.edu/ )
    {
        to "$HEP/RQ/"
    }
    if ( /^(From|To):.*(root|cron)/ )
    {
        to "$HEP/Root/"
    }
    to "$HEP/Inbox"
}

if ( /^(From|to):.*(unix@)?(engr|cae).wisc\.edu/ )
{
    to $CAE
}
