[ui]
editor = ~/bin/hgeditor
merge = vimdiff
username = Will Maier <willmaier@ml1.net>
ignore = ~/.mercurial/ignores
remotecmd = ~/bin/hg

[diff]
git=yes
showfunc=yes

[extensions]
extdiff =
purge =
record =
rebase =
hgext.bookmarks = 
hgext.convert = 
hgext.graphlog =
hgext.mq =
hgext.patchbomb =
# pip install hg-git
hggit = 

[bookmarks]
track.current = True

[alias]
rec = record
dpush = push -b default
dout = out -b default
shortlog = log --template '{rev} {node|short} | {date|isodatesec} | {author|user}: {desc|strip|firstline}\n'
last = shortlog -l7
sh = shortlog
patchn = import --no-commit
cm = commit --message
bpush = push --remotecmd=hg
bpull = pull --remotecmd=hg

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[email]
from = Will Maier <willmaier@ml1.net>

[smtp]
host = localhost

[trusted]
users = root
