[ui]
editor = ~/bin/hgeditor
merge = vimdiff
username = Will Maier <willmaier@ml1.net>
ignore = ~/.mercurial/ignores
remotecmd = ~/bin/hg

[diff]
git=yes
showfunc=yes

[extensions]
extdiff =
purge =
record =
rebase =
hgext.bookmarks = 
hgext.convert = 
hgext.graphlog =
hgext.mq =
hgext.patchbomb =
# pip install hg-git
hggit = 

[bookmarks]
track.current = True

[alias]
bpull = pull --remotecmd=hg
bpush = push --remotecmd=hg
cm = commit --message
dout = out -b default
dpush = push -b default
patchn = import --no-commit
rec = record

shortin = in --style ~/.mercurial/short.style
shin = shortin

shortout = out --style ~/.mercurial/short.style
shout = shortout

shortheads = heads --template ~/.mercurial/short.style
shead = shortheads

shortlog = log --style ~/.mercurial/short.style
last = shortlog -l7
sh = shortlog
shlog = shortlog

[extdiff]
cmd.vimdiff = vimdiff
opts.vimdiff = -o

[email]
from = Will Maier <willmaier@ml1.net>
method = sendmail

[trusted]
users = root
