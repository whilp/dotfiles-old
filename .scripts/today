#!/bin/sh
# Print today's reminders.

DAY=

case ${0##*/} in
    today)
        remind -rm ~/.reminders ${DAY} | sed -e 's/xat //; /^$/d'
        ;;
    week)
        remind -m -rq -b1 -s+ ~/.reminders ${DAY} |\
            sed -e '/^$/d; s/^\(.\{4\}\).\(..\).\(..\) \* \* \* [*0-9]*/\1.\2.\3/;' |\
            sort -k 12
        ;;
esac
