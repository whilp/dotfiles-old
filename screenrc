# ~/.screenrc
# Will Maier <willmaier@ml1.net>
# 2005.06.11
# NOTE: The meta key can be changed on the command line when starting screen
# using the -e flag. Eg: `screen -e^Ee`

# --[ SET OPTIONS
    escape ^Aa
    defscrollback 1000
    setenv DISPLAY ":0.0"
    shelltitle $HOST
    allpartial off
    activity "activity in %n (%t) [%w:%s]~"
    chdir
    vbell on
    vbellwait .2
    msgwait 1
    hardstatus alwayslastline "%w %=[ %h ]--[ %D, %d %M %Y @ %c ]"
    startup_message off

# --[ KEY BINDINGS
    bind j focus down
    bind k focus up
    bind r resize =
    bind c screen 1
    bind 0 select 10
