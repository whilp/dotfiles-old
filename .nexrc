" vim: set noexpandtab:
set autoindent
set cedit=
set extended
set filec=	
set iclower
set ruler
set shiftwidth=4
set showmatch
set showmode
set tabstop=8
set verbose
set wraplen=72

" Go to top.
map g 1G

" (Un)expand tabs.
map *e g!Ge
map *u g!Gu

" Format a paragraph.
map *F  {!}f
map *f {!}F}
