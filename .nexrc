" vim: set noexpandtab:
set autoindent
set cedit=
set extended
set filec=	
set iclower
set ruler
set shiftwidth=4
set showmode
set tabstop=4
set verbose
set wraplen=72

" (Un)expand tabs.
map T !Gexpand -t4
map t !Gunexpand

" Format a paragraph.
map F !}fmt
map f !}fmt -mps
" XXX: Use textproc/par here eventually.

" Go to top.
map g 1G
