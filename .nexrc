" vim: set noexpandtab:
set autoindent
set cedit=
set extended
set filec=	
set iclower
set ruler
set shiftwidth=4
set showmatch
set showmode
set tabstop=4
set verbose
set wraplen=72

" (Un)expand tabs.
map T 1G!Gexpand -t4
map t 1G!Gunexpand

" Format a paragraph.
map F 1G!G}fmt
map f 1G!G}fmt -mps
" XXX: Use textproc/par here eventually.

" Go to top.
map g 1G
