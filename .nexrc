" vim: set noexpandtab:
set autoindent
set cedit=
set extended
set filec=	
set iclower
set ruler
set shiftwidth=4
set showmatch
set showmode
set tabstop=4
set verbose
set wraplen=80

" Go to top.
map g 1G

" (Un)expand a screenful of tabs.
map ;4 H!Lv 4Mj
map ;2 H!Lv 2Mj
map ;E H!Lv EMj
map ;e H!Lv eMj
map ;F {!}v f
map ;f {!}v f}
map ;s !lv s
map ;w :w
map ;x :x

abbreviate W w
abbreviate X x
abbreviate Q q
abbreviate Wq wq
abbreviate WQ wq
