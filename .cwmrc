sticky yes

autogroup 1     xterm
autogroup 2     Firefox
autogroup 3     Chrome

gap 0 424 0 0

# Groups.
bind MC-u       group1
bind MC-i       group2
bind MC-o       group3
bind MC-p       group4
bind MCS-u      movetogroup1
bind MCS-i      movetogroup2
bind MCS-o      movetogroup3
bind MCS-p      movetogroup4

# Other bindings.
bind M-Return   terminal
bind MC-Return  "dmenu_run"
bind MC-h       delete
bind MC-j       cycle
bind MC-k       rcycle
bind MC-l       "mpdlock"
bind M-m        maximize
bind M-s        hide
bind MC-m       hmaximize
bind MS-m       vmaximize
bind MCS-q      "sudo shutdown -hp now"
bind M-r        reload
bind F5         "mpc -q pause"
bind F6         "mpc -q previous"
bind F7         "mpc -q next"
bind F8         "mpc -q toggleplay"
bind F10        "mixerctl -q outputs.master.mute=toggle"
bind F11        "mixerctl -q outputs.master=-12"
bind F12        "mixerctl -q outputs.master=+12"

mousebind M-3   window_resize

# unmap all of the defaults
bind M-Down     unmap
bind M-Up       unmap
bind M-slash    unmap
bind C-slash    unmap
bind M-n        unmap
bind M-p        unmap
bind MC-n       unmap
bind M-Tab      unmap
bind MS-Tab     unmap
bind MC-x       unmap
bind MC-0       unmap
bind MC-1       unmap
bind MC-2       unmap
bind MC-3       unmap
bind MC-4       unmap
bind MC-5       unmap
bind MC-6       unmap
bind MC-7       unmap
bind MC-8       unmap
bind MC-9       unmap
bind MC-g       unmap
bind M-Right    unmap
bind M-Left     unmap
bind MC-f       unmap
bind M-slash    unmap
bind M-equal    unmap
bind M-minus    unmap
bind M-period   unmap
bind M-comma    unmap
bind MC-w       unmap
bind MCS-r      unmap
bind MCS-q      unmap
bind M-h        unmap
bind M-j        unmap
bind M-k        unmap
bind M-l        unmap
bind MS-h       unmap
bind MS-j       unmap
bind MS-k       unmap
bind MS-l       unmap
bind MCS-h      unmap
bind MCS-j      unmap
bind MCS-k      unmap
bind MCS-l      unmap
