if ( /^List-Id:.*glow-tech\.cs\.wisc\.edu/ )
{
    to "$HEP/GLOW/"
}

if ( /^Return-Path:.*rader@noc\.hep\.wisc\.edu/ || \
    /^From:.*nagios@cmssrv02\.fnal\.gov/ )
{
    to "$HEP/Nagios/"
}

if ( /^From:.*(root|cron)/ )
{
    to "$HEP/Root/"
}

if ( /^(To|Cc):.*physics-all@physics\.wisc\.edu/ )
{
    to "$HEP/Department/"
}

if ( /^(From|To):.*(hep|cs)\.wisc\.edu/ )
{
    to "$HEP/Inbox"
}

if ( /^(From|to):.*(unix@)?(engr|cae).wisc\.edu/ )
{
    to $CAE
}
