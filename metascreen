source $HOME/.screenrc

sessionname meta
screen -t MAIL -M   1 mutt 
screen -t SSH	    2
screen -t SSH	    3
screen -t WWW	    4 elinks
screen -t LOCAL	    5
screen -t LOCAL	    6

select 1

backtick 1 60 0 batt
hardstatus alwayslastline "%{= .W}%-Lw%{= .G}%50>%n%f %t%{-}%+Lw%< %-=%{= BW} %?[%{= BW}Batt: %1`%%%{-}].%?%?[%{= BW}%H%{-}].%?[%{= BW}%Y.%m.%d %0c%{-}]"
